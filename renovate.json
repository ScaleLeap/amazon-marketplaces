{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "schedule:earlyMondays"
  ],
  "labels": [
    "renovatebot"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
